<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <solutionClass>com.ofbizian.planner.ProblemDefinition</solutionClass>
    <entityClass>com.ofbizian.planner.Employee</entityClass>

    <scoreDirectorFactory>
        <scoreDefinitionType>HARD_SOFT</scoreDefinitionType>
        <easyScoreCalculatorClass>com.ofbizian.planner.ProblemScoreCalculator</easyScoreCalculatorClass>
    </scoreDirectorFactory>

    <termination>
        <secondsSpentLimit>3</secondsSpentLimit>
    </termination>

    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
    </constructionHeuristic>

    <localSearch>
        <acceptor>
            <entityTabuSize>7</entityTabuSize>
        </acceptor>
        <forager>
            <acceptedCountLimit>1000</acceptedCountLimit>
        </forager>
    </localSearch>
</solver>
